{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des rayons</h1>

    <table>
        <thead>
            <tr>
                <th> </th>
                <th>Désignation</th>
                <th>Thème</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rayon in rayons %}
            <tr>
                <td><a href="{{ path('rayon_show', { 'id': rayon.id }) }}"></a></td>
                <td>{{ rayon.designationRayon }}</td>
                <td>{{ rayon.themeRayon }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rayon_show', { 'id': rayon.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('rayon_edit', { 'id': rayon.id }) }}">Editer</a>
                        </li>
                        <li>
                            <a href="{{ path('rayon_delete', { 'id': rayon.id }) }}">Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rayon_new') }}">Ajouter un rayon</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lecteur list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomlecteur</th>
                <th>Prenomlecteur</th>
                <th>Cyclelecteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecteur in lecteurs %}
            <tr>
                <td><a href="{{ path('lecteur_show', { 'id': lecteur.id }) }}">{{ lecteur.id }}</a></td>
                <td>{{ lecteur.nomLecteur }}</td>
                <td>{{ lecteur.prenomLecteur }}</td>
                <td>{{ lecteur.cycleLecteur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lecteur_show', { 'id': lecteur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('lecteur_edit', { 'id': lecteur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lecteur_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

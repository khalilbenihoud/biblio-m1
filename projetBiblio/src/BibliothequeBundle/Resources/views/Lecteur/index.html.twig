{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('livre_search') }}"><h3 style="text-align: center;">Rechercher un livre </h3></a>
    <h1>Liste Des inscrits</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cycle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecteur in lecteurs %}
            <tr>
                <td>{{ lecteur.nomLecteur }}</td>
                <td>{{ lecteur.prenomLecteur }}</td>
                <td>{{ lecteur.cycleLecteur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('lecteur_show', { 'id': lecteur.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('lecteur_edit', { 'id': lecteur.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('situationpret', {'id': lecteur.id }) }}">Situation</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lecteur_new') }}">Cr√©er un nouveau inscrit</a>
        </li>
    </ul>
{% endblock %}

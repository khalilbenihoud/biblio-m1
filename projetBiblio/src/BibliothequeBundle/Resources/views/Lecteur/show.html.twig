{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lecteur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lecteur.id }}</td>
            </tr>
            <tr>
                <th>Nomlecteur</th>
                <td>{{ lecteur.nomLecteur }}</td>
            </tr>
            <tr>
                <th>Prenomlecteur</th>
                <td>{{ lecteur.prenomLecteur }}</td>
            </tr>
            <tr>
                <th>Cyclelecteur</th>
                <td>{{ lecteur.cycleLecteur }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lecteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lecteur_edit', { 'id': lecteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Emprunter list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunter in emprunters %}
            <tr>
                <td><a href="{{ path('emprunter_show', { 'id': emprunter.id }) }}">{{ emprunter.id }}</a></td>
                <td>{% if emprunter.dateDebut %}{{ emprunter.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if emprunter.dateFin %}{{ emprunter.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('emprunter_show', { 'id': emprunter.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('emprunter_edit', { 'id': emprunter.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('emprunter_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
